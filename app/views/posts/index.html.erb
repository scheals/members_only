<h1>Posts</h1>
<ul>
   <% @posts.each do |post| %>
  <li>
    <p class = "post-title"><%= post.title %></p>
    <p class = "post-body"><%= post.body %></p>
    <% if user_signed_in? %>
      <p class = "post-author"><%= post.user.name %></p>
    <% end %>
  </li>
  <% end %>
</ul>

<%= link_to "New post", new_post_path %>
